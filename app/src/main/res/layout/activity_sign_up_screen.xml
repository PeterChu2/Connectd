<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/connectd" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/sign_up_et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:padding="10dp"
            android:textColorHint="#bbbbbb" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/sign_up_et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:padding="10dp"
            android:textColorHint="#bbbbbb" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/sign_up_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="10dp"
            android:textColorHint="#bbbbbb" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/sign_up_et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:hint="@string/username_hint"
            android:padding="10dp"
            android:textColorHint="#bbbbbb" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/sign_up_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#bbbbbb" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/sign_up_et_password_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:hint="Password Confirmation"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#bbbbbb" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnSignUpSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="Sign In"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_type="success" />
    </LinearLayout>

</RelativeLayout>
